{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": ".",
        "noEmit": true,
        "declaration": true,
        "declarationMap": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "lib": ["ESNext", "DOM"],
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "rootDir": ".",
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "target": "ESNext",
        "paths": {
            "@anti-matter-studios/cydonia/*": ["app/cydonia/src/*"]
        }
    },
    "include": [],
    "exclude": ["node_modules", "tmp"]
}
